<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="2"
    android:rowCount="3"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButtonCow"
        android:src="@drawable/cow"
        android:onClick="onClick"
        style="@style/animal" />

    <ImageButton
        android:id="@+id/imageButtonChicken"
        style="@style/animal"
        android:onClick="onClick"
        android:src="@drawable/chicken" />

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:src="@drawable/cat"
        android:onClick="onClick"
        style="@style/animal" />

    <ImageButton
        android:id="@+id/imageButtonDuck"
        android:src="@drawable/duck"
        android:onClick="onClick"
        style="@style/animal" />

    <ImageButton
        android:id="@+id/imageButtonSheep"
        android:src="@drawable/sheep"
        android:onClick="onClick"
        style="@style/animal" />

    <ImageButton
        android:id="@+id/imageButtonDog"
        android:src="@drawable/dog"
        android:onClick="onClick"
        style="@style/animal" />


</GridLayout>