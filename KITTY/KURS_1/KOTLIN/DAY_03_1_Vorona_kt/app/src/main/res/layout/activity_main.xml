<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:onClick="onClick"
        android:text="Поздороваться"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Counter_Crows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:onClick="onCrows"
        android:text="Считаем ворон"

        app:layout_constraintTop_toBottomOf="@id/button" />

    <Button
        android:id="@+id/button_Сounter_Сats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:onClick="onCat"
        android:text="Считаем котов"
        app:layout_constraintTop_toBottomOf="@id/button_Counter_Crows" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_Сounter_Сats" />

</androidx.constraintlayout.widget.ConstraintLayout>